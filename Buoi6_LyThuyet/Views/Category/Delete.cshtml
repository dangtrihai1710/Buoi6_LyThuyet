@model Buoi6_LyThuyet.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
}

<h1>Xóa danh mục</h1>

<h3>Bạn có chắc chắn muốn xóa danh mục này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="alert alert-warning">
            <strong>Cảnh báo!</strong> Danh mục này có @Model.Products.Count sản phẩm. Nếu xóa danh mục, các sản phẩm này sẽ bị ảnh hưởng.
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
    </form>
</div>